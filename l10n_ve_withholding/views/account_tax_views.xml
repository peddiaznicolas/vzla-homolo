<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_ve_tax_view_form" model="ir.ui.view">
        <field name="name">l10n_ve.tax_view_form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <field name="type_tax_use" position="attributes">
                <attribute name="invisible" separator="or" add="country_code == 'VE'"/>
            </field>
            <field name="name" position="after">
                <field name="l10n_ve_tax_type" invisible="l10n_ve_type_tax_use not in ('supplier')"/>
            </field>
            <field name="type_tax_use" position="after">
                <field name="l10n_ve_type_tax_use" invisible="country_code != 'VE'" required="country_code == 'VE'"/>
            </field>
            <xpath expr="//field[@name='amount']/.." position="after">
                <field name="l10n_ve_withholding_payment_type" invisible="1"/>
                <field name="l10n_ve_withholding_sequence_id" context="{'default_name': name}" invisible="l10n_ve_withholding_payment_type != 'supplier'"/>
            </xpath>
        </field>
    </record>
</odoo>

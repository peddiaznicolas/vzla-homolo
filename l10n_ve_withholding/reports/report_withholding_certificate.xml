<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_withholding_certificate_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <div class="page">
                <div>
                    <br/>
                    <t t-set="report_date" t-value="o.payment_id.date"/>
                    <t t-set="report_number" t-value="o.name"/>
                    <t t-set="report_name" t-value="'COMPROBANTE DE RETENCIÓN ISLR'"/>
                    <t t-set="header_address" t-value="o.company_id.partner_id"/>
                    <div class="text-right">
                        <h4><b><t t-esc="report_name"/></b></h4>
                        <small>REGLAMENTO PARCIAL DE LA LEY DE IMPUESTO SOBRE LA RENTA EN MATERIA DE RETENCIONES Decreto N° 1.808 de fecha 23 de abril de 1997. Gaceta Oficial N° 36.203 de fecha 12 de mayo de 1997.
"Artículo 24: Los agentes de retención están obligados a entregar a  los contribuyentes, un comprobante por cada retención de impuesto que les practiquen en el cual se indique, entre otra información, el monto de lo pagado o abonado en cuenta y la cantidad retenida. (...)"</small>
                        <p style="font-size: 14px;">
                            <b>N° de Comprobante: </b><span t-esc="report_number"/><br/>
                            <b>Fecha de emisión: </b><span t-esc="report_date.strftime('%d-%m-%Y')"/><br/>
                            <b>Periodo Fiscal: </b><span t-esc="o.payment_id._get_fiscal_period(report_date)"/>
                        </p>
                    </div>
                </div><br/>
                <div id="informations" class="row mt8 mb8">
                    <div class="col-6">

                        <!-- IDENTIFICACION (SUJETO A RETENCIÓN) -->

                        <!-- (1) Apellido uy Nombre: Denominicacion o Razon Soclial -->
                        <strong>Sujeto a Retención: </strong><span t-field="o.partner_id.name"/>
                        <!-- (2) RIF -->
                        <t t-if="o.partner_id.vat and o.partner_id.l10n_latam_identification_type_id.name">
                            <br/>
                            <strong>R.I.F:</strong> <span t-field="o.partner_id.l10n_latam_identification_type_id.l10n_ve_code"/>-<span t-field="o.partner_id.vat"/>

                        </t>
                        <!-- (3) Responsabilidad -->
                        <br/>
                        <strong>Tipo de Contribuyente: </strong><span t-field="o.partner_id.l10n_ve_responsibility_type_id"/>
                        <!-- (4) Domicilio Comercial -->
                        <br/>
                        <span t-esc="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "no_tag_br": True}'/>

                    </div>
                </div>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th class="text-center" colspan="2"><strong>Datos de la retención practicada</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-right">
                                Por Concepto:
                            </td>
                            <td class="text-left">
                                <span t-field="o.l10n_ve_regimen_islr_id"/>
                            </td>
                        </tr>
                        <t t-foreach="o.payment_id.invoice_ids" t-as="i">
                            <tr>
                                <t t-if="i.move_type == 'in_refund'">
                                    <td class="text-right">
                                        Factura afectada:
                                    </td>
                                    <td class="text-left" >
                                        <span t-field="i.reversed_entry_id.ref"/>
                                    </td>
                                </t>
                                <t t-elif="i.move_type == out_invoice">
                                    <td class="text-right">
                                        Factura:
                                    </td>
                                    <td class="text-left" >
                                        <span t-field="i.name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="text-right">
                                        Factura:
                                    </td>
                                    <td class="text-left" >
                                        <span t-field="i.ref"/>
                                    </td>
                                </t>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    Fecha de factura afectada:
                                </td>
                                <td class="text-left">
                                    <span t-field="i.invoice_date"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    Número de control:
                                </td>
                                <td class="text-left">
                                    <span t-field="i.l10n_ve_control_number"/>
                                </td>
                            </tr>
                        </t>
                        <tr t-if="o._get_sustraendo()">
                            <td class="text-right">
                                Sustraendo:
                            </td>
                            <td class="text-left">
                                <span t-esc="o._get_sustraendo()"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right">
                                Importe del comprobante que origina la retención:
                            </td>
                            <td class="text-left">
                                 <span t-esc="o.payment_id._format_miles_number(o.base_amount)"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 50%;" class="text-right">
                                Porcentaje Aplicado:
                            </td>
                            <td class="text-left">
                                <span t-field="o.l10n_ve_regimen_islr_id.banda_calculo_ids.withholding_percentage"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right">
                                Importe de la retención:
                            </td>
                            <td class="text-left">
                                <span t-esc="o.payment_id._format_miles_number(o.amount)"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br/><br/><br/>
            </div>
            <div class="row">
                <br/><br/><br/>
                <div class="col-2"></div>
                <div name="footer_left_column" class="col-4">
                    <img t-if="o.company_id.l10n_ve_withholding_signature and not o.company_id.parent_id.l10n_ve_withholding_signature" t-att-src="image_data_uri(o.company_id.l10n_ve_withholding_signature)" width="200px" height="100px"/>
                    <img t-elif="o.company_id.parent_id.l10n_ve_withholding_signature" t-att-src="image_data_uri(o.company_id.parent_id.l10n_ve_withholding_signature)" width="200px" height="100px"/>
                    <br/>
                        Agente de Retención
                </div>
                <div class="col-2"></div>
                <div name="footer_right_column" class="col-4">
                    <br/>
                    <br/>
                    <br/>
                    _______________________<br/>
                    Beneficiario
                </div>
            </div>
        </t>
    </template>

    <template id="report_withholding_certificate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="l10n_ve_withholding.report_withholding_certificate_document" t-lang="lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_withholding_certificate" model="ir.actions.report">
        <field name="name">Comprobante de Retención ISLR</field>
        <field name="model">l10n_ve.payment.withholding</field>
        <field name="report_type">qweb-pdf</field>
        <field name="paperformat_id" ref="base.paperformat_us"/>
        <field name="print_report_name">'Comprobante de Retención - %s' % (object.name or '')</field>
        <field name="report_name">l10n_ve_withholding.report_withholding_certificate</field>
        <field name="report_file">l10n_ve_withholding.report_withholding_certificate</field>
    </record>

</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- View form of res_company -->
    <record id="view_res_company_form_inherit" model="ir.ui.view">
        <field name="name">res_company_form_inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_address_format')]" position="replace">
                <div class="o_ve_address_format">
                    <!-- Esta campo se esta incluyendo porque al reemplazar lo estamos quitando de la herencia original -->
                    <!-- account.view_company_form -->
                    <field name="account_enabled_tax_country_ids" invisible="1" />

                    <field name="country_id" class="o_address_country" placeholder="Country" options="{'no_open': True, 'no_create': True}"/>
                    <field name="state_id" class="o_ve_address_col_2" placeholder="State" options="{'no_open': True, 'no_create': True}" context="{'country_id': country_id, 'zip': zip}"/>
                    <field name="city" class="o_ve_address_col_2" placeholder="Ciudad"/>
                    <field name="municipality_id" class="o_ve_address_col_3" placeholder="Municipio" options="{'no_open': True, 'no_create': True}" domain="[('state_id', '=', state_id)]"/>
                    <field name="parish_id" class="o_ve_address_col_4" placeholder="Parroquia" options="{'no_open': True, 'no_create': True}" domain="[('municipality_id', '=', municipality_id)]"/>
                    <field name="zip" class="o_ve_address_col_4" placeholder="ZIP"/>
                    <field name="street" placeholder="Calle..." class="o_address_street"/>
                    <field name="street2" placeholder="Calle 2..." class="o_address_street"/>
                </div>
            </xpath>
            <field name="vat" position="before">
                <field name="l10n_latam_identification_type_id" />
            </field>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="string">Rif</attribute>
            </xpath>
            <field name="vat" position="after">
                <field
                    name="l10n_ve_responsibility_type_id"
                    string="SENIAT Responsibility"
                    options="{'no_open': True, 'no_create': True}"
                    />
            </field>
        </field>
    </record>
</odoo>

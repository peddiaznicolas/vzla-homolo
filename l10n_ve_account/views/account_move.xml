<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_account_move_form" model="ir.ui.view">
        <field name="name">inherit.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_info_group']//field[@name='company_id']" position="after">
                <field name="l10n_ve_invoice_date" />
            </xpath>
            <xpath expr="//header/button[@name='button_draft']" position="attributes">
                <attribute name="invisible">move_type in ['out_invoice','out_refund','in_invoice','in_refund']</attribute>
            </xpath>
            <xpath expr="//header//button[@name='action_reverse']" position="attributes">
                <attribute name="string">Añadir nota de crédito</attribute>
            </xpath>
        </field>
    </record>



